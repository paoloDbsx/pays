// barre de recherche

.search
    width: 375px
    margin: 0 auto
    .input 
        font-size: 30px
        padding: 10px 5px
        border: none
    ul 
        width: 375px
        text-align: left  
        list-style: none
        background: white
        position: absolute
        z-index: 2
        .item
            font-size: 25px
            cursor: pointer
            color: black
            padding: 10px 5px
        .item:hover
            background: #dddddd

