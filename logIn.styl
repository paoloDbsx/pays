.form
    height: 70vh
    width: 20vw
    margin: 8vh auto 0 auto
    background: rgba(0, 0, 0, 0.5)
    border-radius: 10px
    border: white solid 2px
    p   
        font-size: 40px
        padding: 3vh 0 1vh 0
    .change 
        font-size: 20px
        padding: 0
        cursor: pointer
    .change:hover
        text-decoration: underline
    input 
        font-size: 25px
        width: 15vw
        margin: 3vh auto
        padding: 20px 10px
        border-radius: 10px
        background: rgba(0, 0, 0, 0.9)
        border: none
        color: white
    button
        border: none
        background: rgb(203,14,8)
        color: white
        width: 10vw
        padding: 10px 5px
        border-radius: 10px
        font-size: 25px
        cursor: pointer
        margin: 3vh auto 0 auto
#logIn
    height: 60vh
#register
    display none
.txt
    font-size: 40px